<!DOCTYPE html>
<html>
	<head>
	  <title>Remotecontrol</title>
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
	
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		
		<% if user_signed_in? %>
			<p>Welcome.</p>
		<% else %>
			<p>Go away, stranger!</p>
		<% end %>
		
		<%= yield %>
	
	</body>
</html>